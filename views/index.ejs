<!DOCTYPE html>
<html>
<head>
  <title>FarmaTop</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/index.css">
</head>
<body>
  <h1>Lista de Remédios</h1>
  <ul>
    <% remedios.forEach(remedio => { %>
      <li><%= remedio.nome %></li>
      <ul><%= remedio.descricao %></ul>
      <ul class="detalhes hidden"><%= remedio.indicacao %></ul>
      <ul class="detalhes hidden"><%= remedio.modoDeUsar %></ul>
      <ul class="detalhes hidden"><%= remedio.efeitosColaterais %></ul>
      <button class="ver-mais">Ver Mais</button>
      <button class="ver-menos hidden">Ver Menos</button>
    <% }); %>
  </ul>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    $(document).ready(function() {
      $(".ver-mais").on("click", function() {
        $(this).siblings(".detalhes").removeClass("hidden");
        $(this).addClass("hidden");
        $(this).siblings(".ver-menos").removeClass("hidden");
      });
  
      $(".ver-menos").on("click", function() {
        $(this).siblings(".detalhes").addClass("hidden");
        $(this).addClass("hidden");
        $(this).siblings(".ver-mais").removeClass("hidden");
      });
    });
  </script>
  
  <a href="/formulario">Cadastrar Novo Remédio</a>
  <a href="/formulario">Editar</a>
  <a href="/formulario">Excluir</a>
</body>
</html>
